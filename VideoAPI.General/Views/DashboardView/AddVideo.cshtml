@using VideoAPI.Models.Models
@model VideoAPI.Models.Models.VideoVM

@{
    ViewData["Title"] = "Add new video";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="jumbotron text-center">
            <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
            <h3 class="text-center">Добавить видео:</h3>


            <form method="post" asp-action="AddVideo" enctype="multipart/form-data">

                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">Выберите видео: </label>
                    <div class="col-sm-7">
                        <input type="file" name="file" class="form-control" accept="video/*" multiple="multiple"/>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="VideoModel.Name" class="col-sm-3 col-form-label">Наименоваие: </label>
                    <div class="col-sm-7">
                        <input class="form-control" asp-for="VideoModel.Name" />
                    </div>
                    <div class="col-sm-9 offset-2">
                        <span class="text-danger" asp-validation-for="VideoModel.Name"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="VideoModel.CategoryId" class="col-sm-3 col-form-label">ID категории: </label>
                    <div class="col-sm-1">
                        @Html.DropDownList("SelectedCategory", new SelectList((System.Collections.IEnumerable) ViewData["CategoryList"],"Id","Name"))
                    </div>
                    <div class="col-sm-9 offset-2">
                        <span class="text-danger" asp-validation-for="VideoModel.CategoryId"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-3 form-check-label" asp-for="VideoModel.IsCorrect">Корректность: </label>
                    <div class="col-sm-1">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="VideoModel.IsCorrect">
                        </div>
                    </div>
                </div>

                <hr class="my-4">
                <input type="submit" class="btn btn-success btn-lg" value="Сохранить" />
                <a class="btn btn-primary btn-lg" href="/dashboard/showvideos" role="button">Назад</a>
            </form>
            <hr class="my-4">
        </div>
    </div>
</div>