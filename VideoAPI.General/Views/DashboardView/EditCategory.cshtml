@model VideoAPI.Models.Models.CategoryModel

@{
    ViewData["Title"] = "Edit category";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="jumbotron text-center">
            <form method="post" action="~/dashboard/editcategory">
                <input type="hidden" name="Id" value="@Model.Id" />
                <label>Имя категории: @Model.Name</label>
                <input type="text" name="Name" placeholder="@Model.Name" />
                <p class="lead">ID категории : @Model.Id</p>
                <hr class="my-4">
                <input type="submit" class="btn btn-success btn-lg" value="Сохранить" />
            </form>
        </div>
    </div>
</div>